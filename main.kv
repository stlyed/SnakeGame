#:include game.kv
#:include settings.kv

WindowManager:
    MainMenu:
    SettingMenu:
    SnakeGame:


<MainMenu>:
    name: 'main'

    # the background color
    canvas.before:
        Color:
            rgba: [0, 0, 0, 1]
        Rectangle:
            size: [self.width, self.height]

    Widget:
        Label:
            text: 'Snake Game'
            font_size: root.width / 12
            color: [1, 1, 1, 1]
            center_x: root.width / 2
            y: root.height * (1.7/3)
        Label:
            text: 'by Smyvens'
            font_size: root.width / 25
            color: [1, 1, 1, .3]
            center_x: root.width / 2
            y: root.height * (1.5/3)

        MDRectangleFlatButton:
            text: 'START'
            font_size: root.width / 20
            theme_text_color: "Custom"
            text_color: [0, 1, 1, 1]
            line_color: [0, 1, 1, 1]
            pos: [(root.width / 2) - (self.width / 2), root.height / 3]
            on_release: app.root.current = 'game'

        MDFlatButton:
            text: "SETTINGS"
            font_size: root.width / 30
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            pos: [(root.width / 2) - (self.width / 2), root.height / 4]
            on_release: app.root.current = 'settings'


<SettingMenu>:
    name: 'settings'

    # the background color
    canvas.before:
        Color:
            rgba: [0, 0, 0, 1]
        Rectangle:
            size: [self.width, self.height]

    TheSettings:


<SnakeGame>:
    name: 'game'

    # the background color
    canvas.before:
        Color:
            rgba: [0, 0, 0, 1]
        Rectangle:
            size: [self.width, self.height]

    # put Game class on the screen
    Game: