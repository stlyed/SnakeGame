<Grid>:
    canvas:
        Color:
            rgba: (1, 1, 1, .1)
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: (0, 0, 0, 1)
        Rectangle:
            pos: self.x + 1, self.y + 1
            size: self.width - 2, self.height - 2


<SnakeSegment>:
    canvas:
        Color:
            rgb: (0, 1, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size


<SnakeFruit>:
    canvas:
        Color:
            rgba: (1, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size


<SnakeGame>:
    # Reference variables so the python file can modify the widgets
    fruit: snake_fruit
    snake: snake_snake

    # score
    Label:
        font_size: 50
        x: 20
        top: root.top - 10
        # text: str(root.score)

    SnakeFruit:
        id: snake_fruit

    SnakeSegment:
        id: snake_snake