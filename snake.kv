<SnakeSegment>:
    canvas:
        Color:
            rgb: (0, 1, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size


<SnakeFruit>:
    canvas:
        Color:
            rgba: (1, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size


<SnakeGame>:
    # Reference variables so the python file can modify the widgets
    fruit: snake_fruit
    snake: snake_snake
    message_label: snake_message

    # the border of the game
    canvas.before:
        Line:
            width: 2
            rectangle: root.x, root.y, self.width, root.height

    # score
    Label:
        font_size: 40
        x: 50
        top: root.top - 10
        text: str(root.score)

    # game over
    Label:
        id: snake_message
        font_size: 40
        center_x: root.width / 2
        y: (root.height / 2)
        text: str(root.message)

    SnakeFruit:
        id: snake_fruit

    SnakeSegment:
        id: snake_snake